{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
	},
	"include": [
		"src"
	]
}